<div class="row">
  <div class="col-lg-6">
    <h3>Orders</h3>
  </div>
  <div class="col-lg-6">
    <%= link_to 'Order', new_products_order_path(user_id: current_user.id), remote: true,
     class: 'btn btn-lg btn-secondary float-right' %>  
  </div>
</div>
  <div class="col-lg-12 mt-2">
    <table class="table table-hover table-sm">
      <thead class="thead-dark">
        <tr>
          <th>Product</th>
          <th>Amount</th>
          <th>Data when ordered</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.product.name %></td>
            <td><%= order.amount %></td>
            <td><%= order.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
