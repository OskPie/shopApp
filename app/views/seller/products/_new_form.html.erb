<%= render 'application/modal_errors', resource: @product %>

<%= form_with model: @product, scope: :product, url: seller_products_path,
    method: :post, remote: true, html: { id: 'modal-form' } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_field :code, placeholder: 'leave blank to generate code itself', class: 'form-control' %>
  </div>
<% end %>
