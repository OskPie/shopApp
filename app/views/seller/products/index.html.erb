<div class="row">
  <div class="col-lg-6">
    <h3>Products</h3>
  </div>
  <div class="col-lg-6">
    <%= link_to 'New product', new_seller_product_path, remote: true, class: 'btn btn-sm btn-secondary float-right' %>
  </div>
</div>

<div id="row">
  <div class="col-lg-12 mt-2">
    <table class="table table-hover table-sm">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Code</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.quantity %></td>
            <td><%= product.code %></td>
            <td class="text-right">
              <%= link_to 'Edit', edit_seller_product_path(product), remote: true, class: 'btn btn-sm btn-secondary' %>
              /
              <%= link_to 'Delete', seller_product_path(product), method: :delete, remote: true,
                class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
